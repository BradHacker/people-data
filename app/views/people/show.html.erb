<div class='container-fluid'>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8">
            <h1><%= @person.first_name %> <%= @person.last_name %></h1>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4">
            <%= image_tag @person.send(:picture).url, class: 'img-fluid' %>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>
                My name is <%= @person.first_name %> <%= @person.last_name %>, but people call me <%= @person.nickname %>. <%= @person.description %>
            </p>
        </div>
    </div>
</div>